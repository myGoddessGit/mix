<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:orientation="vertical"
    >
    <com.some.mix.widget.BannerViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_1"
            android:text="知识体系"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tvWx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_2"
            android:text="公众号"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tvProject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_3"
            android:text="项目"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tvNavi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_4"
            android:text="导航"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
