<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:orientation="vertical"
    >
    <com.some.mix.widget.BannerViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGanHuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_1"
            android:text="GanHuo"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tvArticle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_2"
            android:text="Article"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tvGirl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_3"
            android:text="Girl"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tvMvp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_icon_4"
            android:text="VideoMvp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
